<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        
        
         <record id="purchase_order_bon_commande_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="product_qty_total"/>
                </xpath>
                
                
                
                  <xpath expr="//field[@name='amount_total']" position="after">
                   
                    <field name="name_currency" invisible="1"/>
                </xpath>
                
                
                 <xpath expr="//field[@name='amount_total']" position="before">
                   
                    <field name="amount_total_euro"  sum="total euro" attrs="{'invisible': [('name_currency','!=', 'EUR')]}" invisible="1"/>
                </xpath>
                
                
                 <xpath expr="//field[@name='amount_total_euro']" position="after">
                   
                    <field name="amount_total_cfa"  sum="total CFA" attrs="{'invisible': [('name_currency','!=', 'XOF')]}" invisible="1"/>
                </xpath>
                
                   <xpath expr="//field[@name='amount_total_cfa']" position="after">
                   
                    <field name="amount_total_cfa_euro"  sum="total"/>
                </xpath>        
                
            </field>
         </record>
      
        
      
        
        
           <record id="purchase_order_new_view_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="product_qty_total"/>
                </xpath>
                
                
                
                  <xpath expr="//field[@name='amount_total']" position="after">
                   
                    <field name="name_currency" invisible="1"/>
                </xpath>
                
                
                 <xpath expr="//field[@name='amount_total']" position="before">
                   
                    <field name="amount_total_euro"  sum="total euro" attrs="{'invisible': [('name_currency','!=', 'EUR')]}" invisible="1"/>
                </xpath>
                
                
                 <xpath expr="//field[@name='amount_total_euro']" position="after">
                   
                    <field name="amount_total_cfa"  sum="total CFA" attrs="{'invisible': [('name_currency','!=', 'XOF')]}" invisible="1"/>
                </xpath>
                
                   <xpath expr="//field[@name='amount_total_cfa']" position="after">
                   
                    <field name="amount_total_cfa_euro"  sum="total"/>
                </xpath>
                
            
              
                
                
            </field>
         </record>
      
      
        
        
              <record id="purchase_order_line_view_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="lieu_collecte_ids"/>
                </xpath>
            </field>
         </record>
      
      
        
       
     
        
    </data>
</odoo>